{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/proposal.schema.v1.json",
  "title": "Proposal Schema v1",
  "type": "object",
  "required": ["schema_version", "window", "agent", "variants"],
  "properties": {
    "schema_version": { "const": "proposal.v1" },

    "window": {
      "type": "object",
      "required": ["bar_index", "start_step", "end_step"],
      "properties": {
        "bar_index": { "type": "integer", "minimum": 0 },
        "start_step": { "type": "integer", "minimum": 0 },
        "end_step": { "type": "integer", "minimum": 1 }
      }
    },

    "agent": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },

    "variants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "events", "tags"],
        "properties": {
          "id": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "events": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "track", "pitch", "velocity", "start_step", "dur_steps"],
              "properties": {
                "type": { "const": "note" },
                "track": { "type": "string" },
                "pitch": { "type": "integer", "minimum": 0, "maximum": 127 },
                "velocity": { "type": "integer", "minimum": 1, "maximum": 127 },
                "start_step": { "type": "integer", "minimum": 0 },
                "dur_steps": { "type": "integer", "minimum": 1 }
              }
            }
          }
        }
      }
    }
  }
}
