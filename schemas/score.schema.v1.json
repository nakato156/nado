{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/score.schema.v1.json",
  "title": "Score Schema v1",
  "type": "object",
  "required": ["schema_version", "metadata", "resolution", "tracks", "events"],
  "properties": {
    "schema_version": {
      "const": "score.v1"
    },

    "metadata": {
      "type": "object",
      "required": ["title", "tempo_bpm", "time_signature", "key", "length_bars"],
      "properties": {
        "title": { "type": "string" },
        "tempo_bpm": { "type": "integer", "minimum": 1 },
        "time_signature": { "type": "string", "pattern": "^[0-9]+/[0-9]+$" },
        "key": { "type": "string" },
        "length_bars": { "type": "integer", "minimum": 1 }
      }
    },

    "resolution": {
      "type": "object",
      "required": ["steps_per_beat", "beats_per_bar"],
      "properties": {
        "steps_per_beat": { "type": "integer", "minimum": 1 },
        "beats_per_bar": { "type": "integer", "minimum": 1 }
      }
    },

    "tracks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "role", "monophonic"],
        "properties": {
          "id": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["melody", "harmony", "bass", "drums", "fx"]
          },
          "monophonic": { "type": "boolean" },
          "program": { "type": "integer", "minimum": 0, "maximum": 127 }
        }
      }
    },

    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "track", "pitch", "velocity", "start_step", "dur_steps"],
        "properties": {
          "type": { "const": "note" },
          "track": { "type": "string" },
          "pitch": { "type": "integer", "minimum": 0, "maximum": 127 },
          "velocity": { "type": "integer", "minimum": 1, "maximum": 127 },
          "start_step": { "type": "integer", "minimum": 0 },
          "dur_steps": { "type": "integer", "minimum": 1 }
        }
      }
    }
  }
}
